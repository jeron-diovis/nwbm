{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "skipLibCheck": false,
    "noEmit": false,
    "emitDeclarationOnly": false,
    "declaration": true,
    "outDir": "dist",
    "declarationDir": "dist/types"
  },
  "include": ["src"],
  "exclude": [
    "dist",
    "node_modules",
    "src/test",
    "src/**/*.test.ts",
    "src/**/*.spec.ts"
  ]
}
