{
  "name": "@yai/use-event-listener",
  "version": "0.0.0",
  "license": "MIT",
  "description": "React hook for listening to DOM events",
  "keywords": [
    "react",
    "react hook",
    "event hook",
    "use-event",
    "event-listener",
    "use-event-listener",
    "react events hook",
    "react listener hook"
  ],
  "type": "module",
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "start": "npm run test:w",
    "build": "vite build -c vite.config.lib.ts",
    "lint": "npm run lint:js && npm run lint:ts && npm run lint:css",
    "preview": "vite preview",
    "lint:js": "eslint {src,demo,test} --ext .cjs,.js,.jsx,.ts,.tsx --no-error-on-unmatched-pattern",
    "lint:ts": "tsc --noEmit",
    "lint:css": "stylelint \"{src,demo}/**/*.{s,}css\" --aei",
    "fix": "npm run lint:js -- --fix && npm run lint:css -- --fix",
    "test": "vitest",
    "test:w": "vitest --watch",
    "prepare": "npx symlink-dir ../../.vite .vite-root",
    "prepublishOnly": "npm run test && npm run build"
  },
  "devDependencies": {
    "@types/react": "^18.2.66",
    "@types/react-dom": "^18.2.22",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "peerDependencies": {
    "react": ">=18.3.1"
  }
}
